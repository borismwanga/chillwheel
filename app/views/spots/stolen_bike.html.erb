<h1>All stolen bike</h1>

<% @spots.each do |spot| %>
 <%#= link_to spot_path(spot) do %>
  <p>Photo:</p>
  <% if spot.photo.attached? %>
    <%= cl_image_tag spot.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <p>Location:</p>
  <%=spot.location%>
  <p>Comment:</p>
  <%=spot.comment%>
  <div>
  <%= link_to "Edit this spot", edit_spot_path(spot) %>
  <%= link_to "DESTROY REPORT", spot_path(spot),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>

 <%= link_to "Back to spots", spots_path %>

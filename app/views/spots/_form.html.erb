
<%= simple_form_for(@spot)  do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs" >
    <%= f.input :comment, as: :text, input_html: { class: "new-text" } %>
    <%= f.input :category, collection: ["Works", "Damage road", "Dangerous junction", "Accident"], class: "new-text"%>
    <%= f.input :location,
      input_html: {data: {location_autocomplete_target: "location"}},
      wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}class: "d-none"}
    %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

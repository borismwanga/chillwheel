<div class="body-container">
    <div class="form-block">
      <div class="form-container">
        <h2>LOGIN</h2>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>


          <div class="form-actions">
            <%= f.button :submit, "LOGIN", class: "form-text" %>
          </div>
        <% end %>

        <div class="form-link">
          <div><%= link_to "SIGNUP", new_user_registration_path, class:"form-link-text"%></div>
          <div><%= link_to "FORGOT YOUR PASSWORD?", edit_user_password_path, class:"form-link-text"%></div>
        </div>
      </div>
    </div>
</div>
